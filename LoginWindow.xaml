<Window x:Class="NASApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="350" Background="#E6F2FF">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#003366"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#003366"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="20">
        <TextBlock Text="Zadejte NASA API token:" Margin="5" Foreground="#003366" FontWeight="Bold"/>
        <TextBox x:Name="TokenTextBox" Width="250" Margin="5" Padding="5"/>
        <TextBlock Text="Chcete-li získat NASA API token, zašlete žádost na následující webovou stránku. Tento proces může trvat 5-10 minut." Margin="5" Foreground="#003366" TextWrapping="Wrap"/>
        <Button Content="Vstoupit" Click="Login_Click" Width="250"/>
    </StackPanel>
</Window>
